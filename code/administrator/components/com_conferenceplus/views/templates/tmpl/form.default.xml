<?xml version="1.0" encoding="utf-8"?>
<form
        type="browse"
        show_header="1"
        show_filters="1"
        show_pagination="1"
        norows_placeholder="COM_CONFERENCEPLUS_COMMON_NORECORDS"
        >
    <headerset>
        <header name="conferenceplus_message_id" type="rowselect" tdwidth="20" />
        <header name="enabled" type="published" sortable="true" tdwidth="5%" />
        <header name="name" type="fieldsearchable" sortable="true"
                buttons="yes" buttonclass="btn" placeholder="COM_CONFERENCEPLUS_SEARCH_IN_NAME"
                />
        <header name="description" type="text" sortable="false"/>
        <header name="Event" type="text" sortable="true" />
    </headerset>

    <fieldset name="items">
        <field name="conferenceplus_message_id" type="selectrow"/>
        <field name="enabled" type="published"/>
        <field name="name" type="text"
               show_link="true"
               url="index.php?option=com_conferenceplus&amp;view=template&amp;id=[ITEM:ID]"
                />
        <field name="description" type="text"/>
        <field name="eventname" type="text"/>
    </fieldset>

</form>
