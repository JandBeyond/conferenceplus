<?xml version="1.0" encoding="utf-8"?>
<form
		validate="true"
		serverside_validate="true"
		addfieldpath="/libraries/conferenceplus/form/field"
		>
	<fieldset name="basic_configuration"
			  label="COM_CONFERENCEPLUS_GROUP_BASIC"
			  description="COM_CONFERENCEPLUS_GROUP_BASIC_DESC"
			>

		<field name="firstname" type="text" class="inputbox form-control"  labelclass="control-label"
			   size="150" label="COM_CONFERENCEPLUS_FIRSTNAME"
			   description="COM_CONFERENCEPLUS_FIRSTNAME_DESC" required="true" />

		<field name="lastname" type="text" class="inputbox form-control"  labelclass="control-label"
			   size="150" label="COM_CONFERENCEPLUS_LASTNAME"
			   description="COM_CONFERENCEPLUS_LASTNAME_DESC" required="true" />

		<field name="email" type="text" class="inputbox form-control"  labelclass="control-label"
			   size="150" label="COM_CONFERENCEPLUS_EMAIL"
			   description="COM_CONFERENCEPLUS_EMAIL_DESC" required="true" />

		<field name="invoiceaddress" type="textarea" class="inputbox form-control"  labelclass="control-label"
			   rows="5" col="50" label="COM_CONFERENCEPLUS_INVOICEADDRESS"
			   description="COM_CONFERENCEPLUS_INVOICEADDRESS_DESC" required="false" />

		<field name="invoicecompany" type="text" class="inputbox form-control"  labelclass="control-label"
			   size="150" label="COM_CONFERENCEPLUS_INVOICECOMPANY"
			   description="COM_CONFERENCEPLUS_INVOICECOMPANY_DESC" required="false" />

		<field name="invoicestreet" type="text" class="inputbox form-control"  labelclass="control-label"
			   size="150" label="COM_CONFERENCEPLUS_INVOICESTREET"
			   description="COM_CONFERENCEPLUS_INVOICESTREET_DESC" required="true" />

		<field name="invoiceline2" type="text" class="inputbox form-control"  labelclass="control-label"
			   size="150" label="COM_CONFERENCEPLUS_INVOICELINE2"
			   description="COM_CONFERENCEPLUS_INVOICELINE2_DESC" required="false" />

		<field name="invoicepcode" type="text" class="inputbox form-control"  labelclass="control-label"
			   size="150" label="COM_CONFERENCEPLUS_INVOICEPCODE"
			   description="COM_CONFERENCEPLUS_INVOICEPCODE_DESC" required="true" />

		<field name="invoicecity" type="text" class="inputbox form-control"  labelclass="control-label"
			   size="150" label="COM_CONFERENCEPLUS_INVOICECITY"
			   description="COM_CONFERENCEPLUS_INVOICECITY_DESC" required="true" />

		<field name="invoicecountry" type="conferenceplus.country" class="inputbox form-control"  labelclass="control-label"
			   label="COM_CONFERENCEPLUS_INVOICECOUNTRY"
			   description="COM_CONFERENCEPLUS_INVOICECOUNTRY_DESC" required="true" />
	</fieldset>

</form>