<?xml version="1.0" encoding="utf-8"?>
<form
		validate="true"
		serverside_validate="true"
		>
	<fieldset name="basic_configuration"
			  label="COM_CONFERENCEPLUS_GROUP_BASIC"
			  description="COM_CONFERENCEPLUS_GROUP_BASIC_DESC"
	>

		<field name="enabled" type="list"
			   label="JSTATUS" description="COM_CONFERENCEPLUS_FIELD_STATE_DESC"
			   class="inputbox" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="name" type="text" class="inputbox form-control"  labelClass="control-label"
			   size="150" label="COM_CONFERENCEPLUS_EVENTNAME"
			   description="COM_CONFERENCEPLUS_EVENTNAME_DESC" required="true" />

		<field name="description" type="textarea" labelClass="control-label"
			   label="COM_CONFERENCEPLUS_DESCRIPTION" description="COM_CONFERENCEPLUS_DESCRIPTION_DESC"
			   buttons="false" rows="5" cols="80"/>

		<field name="venuename" type="text" class="inputbox form-control"  labelClass="control-label"
			   size="150" label="COM_CONFERENCEPLUS_VENUENAME"
			   description="COM_CONFERENCEPLUS_VENUENAME_DESC" />

		<field name="street" type="text" class="inputbox form-control"  labelClass="control-label"
			   size="150" label="COM_CONFERENCEPLUS_STREET"
			   description="COM_CONFERENCEPLUS_STREET_DESC" />

		<field name="city" type="text" class="inputbox form-control"  labelClass="control-label"
			   size="150" label="COM_CONFERENCEPLUS_CITY"
			   description="COM_CONFERENCEPLUS_CITY_DESC" />

		<field name="country" type="text" class="inputbox form-control"  labelClass="control-label"
			   size="150" label="COM_CONFERENCEPLUS_COUNTRY"
			   description="COM_CONFERENCEPLUS_COUNTRY_DESC" />

		<field name="sdate" type="calendar" class="inputbox form-control" default="1.1.2015" 
			label="COM_CONFERENCEPLUS_START" description="COM_CONFERENCEPLUS_START_DESC" format="%d.%m.%Y" />	   

		<field name="stimehh" type="list"
			label="COM_CONFERENCEPLUS_STIME_HH" description="COM_CONFERENCEPLUS_STIME_HH_DESC"
			class="input-mini" size="1" default="" >
