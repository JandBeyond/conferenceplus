			<option value="21">21</option>
			<option value="22">22</option>
			<option value="23">23</option>
		</field>

		<field name="stimemm" type="list"
			label="COM_CONFERENCEPLUS_STIME_MM" description="COM_CONFERENCEPLUS_STIME_MM_DESC"
			class="input-mini" size="1" default="" >
			<option value="">--</option>
			<option value="00">0</option>
			<option value="15">15</option>
			<option value="30">30</option>
			<option value="45">45</option>
		</field>

		<field name="edate" type="calendar" class="inputbox form-control" default="1.1.2015" 
			label="COM_CONFERENCEPLUS_END" description="COM_CONFERENCEPLUS_END_DESC" format="%d.%m.%Y" />	   

		<field name="etimehh" type="list"
			label="COM_CONFERENCEPLUS_ETIME_HH" description="COM_CONFERENCEPLUS_ETIME_HH_DESC"
			class="input-mini" size="1" default="" >
			<option value="">--</option>
			<option value="00">0</option>
			<option value="01">1</option>
			<option value="02">2</option>
			<option value="03">3</option>
			<option value="04">4</option>
