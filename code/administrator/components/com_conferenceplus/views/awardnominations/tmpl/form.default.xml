<?xml version="1.0" encoding="utf-8"?>
<form
        type="browse"
        show_header="1"
        show_filters="1"
        show_pagination="1"
        norows_placeholder="COM_CONFERENCEPLUS_COMMON_NORECORDS"
        >
    <headerset>
        <header name="nominee" type="fieldsearchable" sortable="true"
                buttons="yes" buttonclass="btn" placeholder="COM_CONFERENCEPLUS_SEARCH"
                />
        <header name="category" type="text" sortable="true" />
        <header name="firstname" type="text" sortable="true" />
        <header name="lastname" type="text" sortable="true" />
        <header name="email" type="text" sortable="true" />
    </headerset>

    <fieldset name="items">
        <field name="nominee" type="text"/>
        <field name="category" type="text"/>
        <field name="firstname" type="text" />
        <field name="lastname" type="text" />
        <field name="email" type="text" />
    </fieldset>

</form>
