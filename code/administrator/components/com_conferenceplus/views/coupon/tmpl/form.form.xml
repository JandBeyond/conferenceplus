<?xml version="1.0" encoding="utf-8"?>
<form
		validate="true"
		serverside_validate="true"
		>
	<fieldset name="basic_configuration"
			  label="COM_CONFERENCEPLUS_GROUP_BASIC"
			  description="COM_CONFERENCEPLUS_GROUP_BASIC_DESC"
	>

		<field name="enabled" type="list"
			   label="JSTATUS" description="COM_CONFERENCEPLUS_FIELD_STATE_DESC"
			   class="inputbox" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="identifier" type="text" class="inputbox form-control"  labelClass="control-label"
			   size="150" label="COM_CONFERENCEPLUS_COUPONIDENTIFIER"
			   description="COM_CONFERENCEPLUS_COUPONIDENTIFIER_DESC" required="true" />

		<field name="name" type="text" class="inputbox form-control"  labelClass="control-label"
		       size="150" label="COM_CONFERENCEPLUS_COUPONNAME"
		       description="COM_CONFERENCEPLUS_COUPONNAME_DESC" required="true" />

		<field name="description" type="textarea" labelClass="control-label"
		       label="COM_CONFERENCEPLUS_COUPONDESCRIPTION" description="COM_CONFERENCEPLUS_COUPONDESCRIPTION_DESC"
		       buttons="false" rows="5" cols="80"/>

		<field name="sdate" type="calendar" class="inputbox form-control" default="1.1.2015"
		       label="COM_CONFERENCEPLUS_COUPONTYPESTART" description="COM_CONFERENCEPLUS_COUPONTYPESTART_DESC" format="%d.%m.%Y" />

