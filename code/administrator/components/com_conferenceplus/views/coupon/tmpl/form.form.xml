		<field name="number_valid_items" type="text" class="inputbox form-control"  labelClass="control-label"
		       size="15" label="COM_CONFERENCEPLUS_NUMBER_VALID_ITEMS" default="0"
		       description="COM_CONFERENCEPLUS_NUMBER_VALID_ITEMS_DESC" required="true" />


		<field name="freeticket" type="list"
			   label="COM_CONFERENCEPLUS_FREETICKET" 
			   description="COM_CONFERENCEPLUS_FREETICKET_DESC"
			   class="inputbox" size="1" default="0" >
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="fixed_fee" type="text" class="inputbox form-control"  labelClass="control-label"
		       size="15" label="COM_CONFERENCEPLUS_FIXED_FEE" default="0"
		       description="COM_CONFERENCEPLUS_FIXED_FEE_DESC" />

		<field name="discount_fix" type="text" class="inputbox form-control"  labelClass="control-label"
		       size="15" label="COM_CONFERENCEPLUS_DISCOUNT_FIX" default="0"
		       description="COM_CONFERENCEPLUS_DISCOUNT_FIX_DESC" />

		<field name="discount_percentaged" type="text" class="inputbox form-control"  	labelClass="control-label"
		       size="15" label="COM_CONFERENCEPLUS_DISCOUNT_PERCENTAGED" default="0"
		       description="COM_CONFERENCEPLUS_DISCOUNT_PERCENTAGED_DESC" />


	</fieldset>

