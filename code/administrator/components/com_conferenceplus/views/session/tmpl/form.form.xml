<?xml version="1.0" encoding="utf-8"?>
<form
		validate="true"
		serverside_validate="true"
		>
	<fieldset name="basic_configuration"
			  label="COM_CONFERENCEPLUS_GROUP_BASIC"
			  description="COM_CONFERENCEPLUS_GROUP_BASIC_DESC"
	>

		<field name="enabled" type="list"
			   label="JSTATUS" description="COM_CONFERENCEPLUS_FIELD_STATE_DESC"
			   class="inputbox" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="title" type="text" class="inputbox form-control"  labelClass="control-label"
		       size="150" label="COM_CONFERENCEPLUS_SESSIONTITLE"
		       description="COM_CONFERENCEPLUS_SESSIONTITLE_DESC" required="true" />

		<field name="description" type="textarea" class="inputbox form-control"  labelClass="control-label"
		       size="150" label="COM_CONFERENCEPLUS_SESSIONDESCRIPTION"
		       description="COM_CONFERENCEPLUS_SESSIONDESCRIPTION_DESC" required="true"
		       buttons="false" rows="5" cols="80"/>

		<field name="catid" type="category" extension="com_conferenceplus" labelClass="control-label" class="form-control"
		       label="COM_CONFERENCEPLUS_SESSIONCATEGORY" />

		<field name="sessiontype" type="conferenceplus.sessiontype" class="inputbox form-control"  labelClass="control-label"
		       label="COM_CONFERENCEPLUS_SESSIONTYPE" />

		<field name="addidionalinfo" type="textarea" class="inputbox form-control"  labelClass="control-label"
		       size="150" label="COM_CONFERENCEPLUS_SESSIONADDIDIONALINFO"
		       description="COM_CONFERENCEPLUS_SESSIONADDIDIONALINFO_DESC"
		       buttons="false" rows="5" cols="80"/>

		<field name="speaker_listids" type="conferenceplus.speaker" class="inputbox form-control"  labelClass="control-label"
		       label="COM_CONFERENCEPLUS_SPEAKER" default="" multiple="true"/>

		<field name="notes" type="textarea" class="inputbox form-control"  labelClass="control-label"
		       size="150" label="COM_CONFERENCEPLUS_SESSIONNOTES"
		       description="COM_CONFERENCEPLUS_SESSIONNOTES_DESC"
		       buttons="false" rows="5" cols="80"/>

		<field name="slides" type="textarea" class="inputbox form-control"  labelClass="control-label"
		       size="150" label="COM_CONFERENCEPLUS_SESSIONSLIDES"
		       description="COM_CONFERENCEPLUS_SESSIONSLIDES_DESC"
		       buttons="false" rows="5" cols="80"/>

		<field name="video" type="textarea" class="inputbox form-control"  labelClass="control-label"
		       size="150" label="COM_CONFERENCEPLUS_SESSIONVIDEO"
		       description="COM_CONFERENCEPLUS_SESSIONVIDEO_DESC"
		       buttons="false" rows="5" cols="80"/>

		<field name="event_id" type="conferenceplus.event" class="inputbox form-control"  labelClass="control-label"
			   label="COM_CONFERENCEPLUS_EVENTTITLE" />

	</fieldset>

</form>