<?xml version="1.0" encoding="utf-8"?>
<form
        type="browse"
        show_header="1"
        show_filters="1"
        show_pagination="1"
        norows_placeholder="COM_CONFERENCEPLUS_COMMON_NORECORDS"
        >
    <headerset>
        <header name="conferenceplus_payment_id" type="rowselect" tdwidth="20" />
        <header name="state" type="text" sortable="true"/>
        <header name="name" type="fieldsearchable" sortable="true"
                buttons="yes" buttonclass="btn" placeholder="COM_CONFERENCEPLUS_SEARCH"
                />
        <header name="processkey" type="text" sortable="true"/>
    </headerset>

    <fieldset name="items">
        <field name="conferenceplus_payment_id" type="selectrow"/>
        <field name="state" type="text"/>
        <field name="name" type="text"
               show_link="true"
               url="index.php?option=com_conferenceplus&amp;view=payment&amp;id=[ITEM:ID]"
               empty_replacement="COM_CONFERENCEPLUS_EMPTY_REPLACMENT_PAYMENT"
                />
        <field name="processkey" type="text"/>
    </fieldset>

</form>
