<?xml version="1.0" encoding="utf-8"?>
<form
        type="browse"
        show_header="1"
        show_filters="1"
        show_pagination="1"
        norows_placeholder="COM_CONFERENCEPLUS_COMMON_NORECORDS"
        >
    <headerset>
        <header name="conferenceplus_speaker_id" type="rowselect" tdwidth="20" />
        <header name="enabled" type="published" sortable="true" tdwidth="5%" />
        <header name="firstname" type="fieldsearchable" sortable="true"
                buttons="yes" buttonclass="btn" placeholder="COM_CONFERENCEPLUS_SEARCH"
                />
        <header name="lastname" type="text" sortable="true" />
        <header name="email" type="text" sortable="true"/>
    </headerset>

    <fieldset name="items">
        <field name="conferenceplus_speaker_id" type="selectrow"/>
        <field name="enabled" type="published"/>
        <field name="firstname" type="text"
               show_link="true"
               url="index.php?option=com_conferenceplus&amp;view=speaker&amp;id=[ITEM:ID]"
                />
        <field name="lastname" type="text"
               show_link="true"
               url="index.php?option=com_conferenceplus&amp;view=speaker&amp;id=[ITEM:ID]"
                />
        <field name="email" type="text" />
    </fieldset>

</form>
